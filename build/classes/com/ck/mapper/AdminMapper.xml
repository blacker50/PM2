<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间-->
<mapper namespace="com.ck.mapper.AdminMapper">
    <!--采用* 表的属性必须和pojos属性名相同-->
    <select id="selectAll" resultType="admin">
        SELECT * FROM admin
    </select>
	
	<insert id="addAdmin" parameterType="admin">
		insert into admin(id, guid, name,password)  
             values(#{id},UUID(),#{name},#{password})
	</insert>
	
	<delete id="deleteAdmin" parameterType="Integer">
		delete from admin where id=#{id}
	</delete>
	
	<select id="getAdminById" parameterType="Integer" resultType="admin">
		select * from admin where id=#{id}
	</select>
	
	<update id="updateAdminMess" parameterType="admin">
		update admin set name=#{name} where id=#{id}
	</update>	
	
	<update id="modifyAdminPassword"  parameterType="admin">
		update admin set password=#{password} where id=#{id]
	</update>
</mapper>